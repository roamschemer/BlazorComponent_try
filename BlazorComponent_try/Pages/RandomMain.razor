@page "/random-main"

<h1>A2Pを抽選せよ</h1>
<p>
    <RandomLottery Title="九条家" Items="@Kujos" @bind-Result="KujoResult" />
</p>
<p>
    <RandomLottery Title="ひそうら+笑虹" Items="@Hisoura" @bind-Result="HisouraResult" />
</p>
<p>
    <RandomLottery Title="ほうれんそうず" Items="@Hourensous" @bind-Result="HourensousResult" />
</p>
<p>
    <RandomLottery Title="フカシス" Items="@Fukasis" @bind-Result="FukasisResult" />
</p>
<p>
    <RandomLottery Title="ユイしあ" Items="@Yuishia" @bind-Result="YuishiaResult" />
</p>
<p>
    <BSLabel>抽選の結果、九条家より @KujoResult 様。ひそうらより @HisouraResult 様。ほうれんそうずより @HourensousResult 様。フカシスより @FukasisResult 様。ユイしあより @YuishiaResult 様が選出されました！！！</BSLabel>
</p>


@code{
    public string Text { get; set; } = "default";
    public List<string> Kujos = new() { "九条林檎", "九条棗", "九条杏子", "九条茘枝" };
    public List<string> Hisoura = new() { "都三代らみょん", "三田そにあ", "縁うか", "ひなわんこ", "雨ヶ崎笑虹" };
    public List<string> Hourensous = new() { "巻乃もなか", "幸糖ミュウミュウ", "青咲ローズ", "泡沫調" };
    public List<string> Fukasis = new() { "白乃クロミ", "碧惺スキア", "紫吹ふうか", "菜花なな" };
    public List<string> Yuishia = new() { "結目ユイ", "水瀬しあ" };
    public string KujoResult;
    public string HisouraResult;
    public string HourensousResult;
    public string FukasisResult;
    public string YuishiaResult;
}